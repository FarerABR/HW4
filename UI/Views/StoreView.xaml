<Window x:Class="UI.Views.StoreView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Name="StoreWindow" Loaded="StoreWindow_Loaded" Title=" Suff™ Store" 
        mc:Ignorable="d" Background="{StaticResource MaterialDesignBackground}"
        Height="615" Width="1020" WindowStartupLocation="CenterScreen"
        FontFamily="{StaticResource MaterialDesignFont}" Closing="StoreWindow_Closing">

    <Grid Name="MainPage">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid  Name="ProductsPage"  Grid.Column="1" Background="AliceBlue"
                   Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="13" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="13" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="13" />
                <RowDefinition Height="*" />
                <RowDefinition Height="13" />
            </Grid.RowDefinitions>

            <Border Name="SearchPanel" Grid.Column="1" Grid.Row="1" BorderThickness="0.8" Padding="10"
                BorderBrush="{StaticResource MaterialDesignToolForeground}" Margin="0 0 0 0">
                <ScrollViewer materialDesign:ScrollViewerAssist.IsAutoHideEnabled="true"
                        materialDesign:ScrollViewerAssist.CornerRectangleVisibility="Collapsed"
                          HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.RowSpan="1" Margin="0 0 0 20">

                            <TextBox Name="SearchTextBox" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    materialDesign:HintAssist.IsFloating="False" materialDesign:HintAssist.Hint="Search" Grid.Row="1"
                    Width="110" FontSize="10" AllowDrop="True" Padding="10" Margin="0 5 5 0" MinWidth="145"
                                         LostFocus="Temp_Click"/>

                            <CheckBox Name="GPUCheck" Style="{StaticResource MaterialDesignAccentCheckBox}"
                        Margin="0 25 0 0" Grid.Row="0" Checked="Temp_Click" Unchecked="Temp_Click">
                                GPU
                            </CheckBox>
                            <CheckBox Name="CPUCheck" Style="{StaticResource MaterialDesignAccentCheckBox}"
                        Margin="0 13 0 0" Grid.Row="0" Checked="Temp_Click" Unchecked="Temp_Click">
                                CPU
                            </CheckBox>
                            <CheckBox Name="MotherboardCheck" Style="{StaticResource MaterialDesignAccentCheckBox}"
                        Margin="0 13 0 0" Grid.Row="0" Checked="Temp_Click" Unchecked="Temp_Click">
                                Motherboard
                            </CheckBox>
                            <CheckBox Name="RAMCheck" Style="{StaticResource MaterialDesignAccentCheckBox}"
                        Margin="0 13 0 0" Grid.Row="0" Checked="Temp_Click" Unchecked="Temp_Click">
                                RAM
                            </CheckBox>

                        </StackPanel>

                        <Button Name="AddNewProductBtn" Margin="17 0 2 10" FontSize="11"
                        Style="{StaticResource MaterialDesignFlatButton}" Foreground="Black"
                                Grid.Row="2" Click="AddNewProductBtn_Click" Background="#FFFEDC52">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="StorePlus" Margin="0 1 5 0"/>
                                <TextBlock Text="add new product" Margin="0 3 0 0"/>
                            </StackPanel>
                        </Button>

                        <Button Name="Temp" Width="0" Height="0" Opacity="0" Click="Temp_Click"
                                    IsDefault="True" Grid.Row="2" Margin="0 25 0 0"/>
                    </Grid>
                </ScrollViewer>
            </Border>

            <ScrollViewer Name="ProductsPanel" Grid.Column="2" Grid.Row="1"
                        materialDesign:ScrollViewerAssist.IsAutoHideEnabled="true"
                        materialDesign:ScrollViewerAssist.CornerRectangleVisibility="Collapsed"
                        HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <WrapPanel Name="ProductsWrapPanel" Margin="30 0 0 0"
                        HorizontalAlignment="Left" VerticalAlignment="Top">

                </WrapPanel>
            </ScrollViewer>

            <ScrollViewer Name="DetailsPanel" Grid.Column="2" Grid.Row="1" Visibility="Collapsed"
                        materialDesign:ScrollViewerAssist.IsAutoHideEnabled="true" Margin="0 0 0 0"
                        materialDesign:ScrollViewerAssist.CornerRectangleVisibility="Collapsed"
                        HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Border Margin="20 10 0 10" Background="#FFD0FEFF"
                                Padding="40 40 40 15" BorderBrush="#FF08B2C0"
                                BorderThickness="1.5" CornerRadius="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="4">
                                <TextBlock Text="Name:" Grid.Row="0" Foreground="#FF1824FF"
                                           Margin="0 5 0 20" FontSize="23"/>
                                <TextBlock Text="Price:" Grid.Row="1" Foreground="#FF1824FF"
                                           Margin="0 0 0 20" FontSize="23"/>
                                <TextBlock Text="Discount:" Grid.Row="2"
                                           Margin="0 0 0 20" FontSize="23" Foreground="#FF1824FF"/>
                                <TextBlock Text="Rating:" Grid.Row="3" Foreground="#FF1824FF"
                                           Margin="0 0 0 20" FontSize="23"/>
                            </StackPanel>

                            <StackPanel Grid.Column="0" Grid.Row="5" Grid.RowSpan="4">
                                <TextBlock Text="first" Grid.Row="5" Name="FirstDetail"
                                           Margin="0 20 0 20" FontSize="23" Foreground="#FF1824FF"/>
                                <TextBlock Text="second" Grid.Row="6" Name="SecondDetail"
                                           Margin="0 0 0 20" FontSize="23" Foreground="#FF1824FF"/>
                                <TextBlock Text="third" Grid.Row="7" Name="ThirdDetail"
                                           Margin="0 1 0 20" FontSize="23" Foreground="#FF1824FF"/>
                                <TextBlock Text="fourth" Grid.Row="8" Name="FourthDetail"
                                           Margin="0 3 0 20" FontSize="23" Foreground="#FF1824FF"
                                            Visibility="Collapsed"/>
                                <TextBlock Text="fifth" Grid.Row="8" Name="FifthDetail"
                                            Margin="0 3 0 20" FontSize="23" Foreground="#FF1824FF"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="5" Margin="15 0 0 0">
                                <TextBox Name="DetailsProductName" Grid.Row="0" IsReadOnly="True"
                                Margin="0 3 0 15" FontSize="20" Height="34" Padding="3" MaxWidth="410"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Foreground="#FF383838" BorderBrush="#BC0BA97B" TextChanged="CheckEmptyTextBox"/>
                                <TextBox Name="DetailsProductPrice" Grid.Row="1" IsReadOnly="True"
                                Margin="0 0 0 15" FontSize="20" Height="34" Padding="3" MaxWidth="410"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Foreground="#FF383838" BorderBrush="#BC0BA97B" TextChanged="CheckEmptyTextBox"/>
                                <TextBox Name="DetailsProductDiscount" Grid.Row="2" IsReadOnly="True"
                                Margin="0 0 0 18" FontSize="20" Height="34" Padding="3" MaxWidth="410"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Foreground="#FF383838" BorderBrush="#BC0BA97B" TextChanged="CheckEmptyTextBox"/>

                                <DockPanel Margin="0 -2 0 0">

                                    <materialDesign:RatingBar Name="DetailsRating" Value="4"
                                        Grid.Row="3" Foreground="#FFF62ADD" IsReadOnly="True"/>

                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                        <TextBlock Text="Date created:" Margin="30 2 20 0"
                                            Foreground="#FF1824FF" FontSize="18"/>

                                        <TextBlock Name="CreationDateTextBlock" Text="Test"
                                            Foreground="#FF008167" FontSize="15" Margin="0 -2 5 0"
                                            TextAlignment="Center"/>
                                    </StackPanel>

                                </DockPanel>

                            </StackPanel>

                            <StackPanel Grid.Column="1" Grid.Row="5" Grid.RowSpan="4" Margin="15 0 0 0">
                                <TextBox Name="FirstDetailAnswer" Grid.Row="5" IsReadOnly="True"
                                Margin="0 13 0 15" FontSize="20" Height="34" Padding="3"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}" MaxWidth="410"
                                Foreground="#FF383838" BorderBrush="#BC0BA97B" TextChanged="CheckEmptyTextBox"/>
                                <TextBox Name="SecondDetailAnswer" Grid.Row="6" IsReadOnly="True"
                                Margin="0 0 0 15" FontSize="20" Height="34" Padding="3"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}" MaxWidth="410"
                                Foreground="#FF383838" BorderBrush="#BC0BA97B" TextChanged="CheckEmptyTextBox"/>
                                <TextBox Name="ThirdDetailAnswer" Grid.Row="7" IsReadOnly="True"
                                Margin="0 0 0 18" FontSize="20" Height="34" Padding="3"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}" MaxWidth="410"
                                Foreground="#FF383838" BorderBrush="#BC0BA97B" TextChanged="CheckEmptyTextBox"/>
                                <TextBox Name="FourthDetailAnswer" Grid.Row="8" IsReadOnly="True"
                                Margin="0 0 0 18" FontSize="20" Height="34" Padding="3"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}" MaxWidth="410"
                                Visibility="Collapsed" Foreground="#FF383838"
                                BorderBrush="#BC0BA97B" TextChanged="CheckEmptyTextBox"/>

                                <DockPanel Grid.Row="8">
                                    <TextBox Name="FifthDetailAnswer" IsReadOnly="True"
                                FontSize="20" Height="34" Padding="3" MinWidth="150"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Foreground="#FF383838" BorderBrush="#BC0BA97B" MaxWidth="410"
                                DockPanel.Dock="Left" TextChanged="CheckEmptyTextBox"/>
                                    <TextBox Name="SixthDetailAnswer" IsReadOnly="True"
                                FontSize="20" Height="34" Padding="3" MinWidth="150"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Foreground="#FF383838" BorderBrush="#BC0BA97B" MaxWidth="410"
                                DockPanel.Dock="Right" TextChanged="CheckEmptyTextBox"/>
                                    <TextBlock Text="Sixth" Name="SixthDetail"
                                Margin="35 0 20 0" FontSize="23" MaxWidth="470"
                                Foreground="#FF1824FF" DockPanel.Dock="Right"/>

                                    <TextBlock/>
                                </DockPanel>

                            </StackPanel>

                            <Separator Grid.Row="4" Grid.ColumnSpan="2" Margin="-10 0 -10 10"/>

                            <Button Name="AddToCartBtn"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                VerticalAlignment="Bottom" HorizontalAlignment="Right"
                                Padding="0 -10 0 -10" Foreground="#FFAA31FB"
                                Grid.Row="10" Grid.Column="1" Width="146" Height="35"
                                Click="AddToCartBtn_Click" IsDefault="True">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CartPlus" Width="20"
                                    Margin="0 1 5 0" Height="20"/>
                                    <TextBlock Text="add to cart" FontSize="17"/>
                                </StackPanel>
                            </Button>

                            <Button Name="DetailsEditBtn"
                                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                                Padding="0 -10 0 -10" Foreground="#FFE3FF00" Visibility="Visible"
                                Grid.Row="10" Grid.Column="1" Margin="0 0 40 0"
                                Width="90" Click="DetailsEditBtn_Click" Height="30"
                                Background="#FF2D7CFE" BorderBrush="#FF5B97FA">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="StoreEdit" Width="20"
                                    Margin="-7 0 5 0" Height="18"/>
                                    <TextBlock Text="Edit" FontSize="15" Margin="0 0 0 1"/>
                                </StackPanel>
                            </Button>

                            <Button Name="DetailsSaveBtn"
                                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                                Padding="0 -10 0 -10" Foreground="#FFFC6000" Visibility="Collapsed"
                                Grid.Row="10" Grid.Column="1" Margin="0 0 40 0" IsDefault="True"
                                Width="90" Click="DetailsSaveBtn_Click" Height="30"
                                Background="#FF70FFED" BorderBrush="#FF77FFE6">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ContentSaveEdit" Width="20"
                                    Margin="-7 0 5 0" Height="18"/>
                                    <TextBlock Text="Save" FontSize="15" Margin="0 0 0 1"/>
                                </StackPanel>
                            </Button>

                            <TextBlock Name="DetailsEditError" Grid.Row="10" Grid.Column="1"
                                    Text="* invalid inputs" Foreground="Red" Margin="0 -10 50 35"
                                    VerticalAlignment="Bottom" HorizontalAlignment="Center"
                                    Visibility="Collapsed"/>

                            <TextBlock Name="DetailsEditSuccess" Grid.Row="10" Grid.Column="1"
                                    Text="✔Saved changes" Foreground="#FF00C619" Margin="0 -10 50 35"
                                    VerticalAlignment="Bottom" HorizontalAlignment="Center"
                                    Visibility="Visible"/>

                            <TextBlock Name="DetailsProductVisibility" Text="visible"
                                    VerticalAlignment="Bottom" HorizontalAlignment="Left"
                                    Grid.Row="10" Grid.Column="1" Margin="17 0 0 9"
                                    FontSize="12" Foreground="#FF00C018" />

                            <ToggleButton Name="DetailsDeleteBtn"
                                    VerticalAlignment="Bottom" HorizontalAlignment="Left"
                                    Grid.Row="10" Grid.Column="1" Margin="60 0 0 7" IsChecked="false"
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    Background="#FFFFFEB3" Click="DetailsDeleteBtn_Click">
                                <materialDesign:PackIcon
                                        Kind="DeleteOff"
                                        RenderTransformOrigin=".5,.5">
                                    <materialDesign:PackIcon.Foreground>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FF1FA1FF" Offset="0.35"/>
                                            <GradientStop Color="#FFB3FF9F" Offset="1"/>
                                        </LinearGradientBrush>
                                    </materialDesign:PackIcon.Foreground>
                                </materialDesign:PackIcon>
                                <materialDesign:ToggleButtonAssist.OnContent>
                                    <materialDesign:PackIcon
                                            Kind="Delete" Foreground="#DDFF0000" />
                                </materialDesign:ToggleButtonAssist.OnContent>
                            </ToggleButton>

                        </Grid>

                    </Border>

                    <materialDesign:PackIcon Kind="KeyboardBackspace"
                                Height="35" Width="60" Margin="45 16 10 10" Foreground="#FF88B2C5" />
                    <Button Name="DetailsBack" Style="{StaticResource MaterialDesignFlatButton}"
                                VerticalAlignment="Top" HorizontalAlignment="Left"
                                Margin="45 16 30 30" Padding="-10" Click="DetailsBack_Click"
                                Height="35" Width="60" Opacity="0" IsCancel="True"/>

                </Grid>
            </ScrollViewer>

            <Grid Name="AddProductPage" VerticalAlignment="Center" Visibility="Hidden"
              HorizontalAlignment="Center" Grid.Column="2" Grid.Row="1">
                <materialDesign:Card MinHeight="450" MinWidth="550" Padding="40 50 40 0"
                            Background="#FFEFFAFF">
                    <ScrollViewer materialDesign:ScrollViewerAssist.IsAutoHideEnabled="true"
                        HorizontalScrollBarVisibility="auto" VerticalScrollBarVisibility="auto" 
                        HorizontalAlignment="Left">
                        <Grid Margin="0 0 0 -10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Name="GeneralInfo" Margin="0 0 20 0" Grid.Column="0">

                                <TextBlock Text="General information" Margin="0" FontSize="15"/>

                                <ComboBox Name="AddedProductType" FontSize="15"
                                materialDesign:HintAssist.Hint="Product type" 
                                IsEditable="False" Margin="0 30 0 0"
                                SelectionChanged="AddedProductType_SelectionChanged"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                    <ComboBoxItem IsSelected="True">
                                        CPU
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        GPU
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        RAM
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        Motherboard
                                    </ComboBoxItem>
                                </ComboBox>

                                <TextBox
                                  materialDesign:HintAssist.Hint="Name of product" Margin="0 25 0 0"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  Name="NameTextBox"  MaxLength="100" MaxWidth="215" LostFocus="NameTextBox_LostFocus"
                                  materialDesign:HintAssist.HelperText="*required"/>

                                <TextBox
                                  materialDesign:HintAssist.Hint="Price" Margin="0 30 130 0"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                   Name="PriceTextBox" MaxLength="10" MaxWidth="215"  LostFocus="PriceTextBox_LostFocus"/>
                                <materialDesign:PackIcon Kind="Dollar" Margin="83 -13 0 0"
                                    MaxHeight="14" Opacity="0.5"/>
                                <TextBlock Text="*number" FontSize="8" Margin="0 2 0 -12"
                                           Foreground="Red" Visibility="Collapsed" Name="PriceError"/>

                                <TextBox
                                  materialDesign:HintAssist.Hint="Discount" Margin="120 -34 17 0"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  TextChanged="CheckKeyNum"
                                  Name="DiscountTextBox" MaxLength="3" MaxWidth="215"
                                  LostFocus="DiscountTextBox_LostFocus"/>
                                <TextBlock Text="*0 to 100" FontSize="8" Margin="120 2 0 -12"
                                           Foreground="Red" Visibility="Collapsed" Name="DiscountError"/>

                                <materialDesign:PackIcon Kind="SackPercent" Margin="199 -13 0 0"
                                            MaxHeight="14" Opacity="0.5"/>

                                <StackPanel Orientation="Horizontal" Margin="0 55 0 0">

                                    <materialDesign:PackIcon Kind="Numeric0Circle"
                                            Foreground="#FFEA79F3" Margin="30 5 -30 0"/>
                                    <Button Name="ZeroRatingBtn" Click="ZeroRatingBtn_Click"
                                            Style="{StaticResource MaterialDesignFlatButton}" Opacity="0"
                                            Margin="15 2 5 0" Height="14" Width="14"
                                            materialDesign:ButtonAssist.CornerRadius="7"/>

                                    <materialDesign:RatingBar
                                            Foreground="#FFF358FF"
                                            Name="RatingBar" HorizontalAlignment="Center"
                                            ValueChanged="RatingBar_ValueChanged"/>

                                </StackPanel>

                                <StackPanel Name="Buttons" Orientation="Horizontal" Margin="0 40 0 0">

                                    <Button Style="{StaticResource MaterialDesignOutlinedSecondaryLightButton}"
                                        Margin="0 0 0 0" Foreground="#FFFF1313" Width="80" Height="30"
                                        BorderBrush="#FFFF876F" Name="CancelAddProductBtn"
                                        Click="CancelAddProductBtn_Click" Padding="5" IsCancel="True">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="ArchiveCancel" Margin="-4 0 0 0"/>
                                            <TextBlock Text="cancel" Margin="4 0 0 0"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Style="{StaticResource MaterialDesignOutlinedSecondaryLightButton}"
                                        Margin="55 0 0 0" Foreground="#FF35C495" Width="80" Height="30" IsDefault="True"
                                        BorderBrush="#FF09D587" Name="AddProductBtn" Click="AddProductBtn_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="PackageVariantClosedPlus"/>
                                            <TextBlock Text="add" Margin="5 0 0 0"/>
                                        </StackPanel>
                                    </Button>

                                </StackPanel>

                                <TextBlock Name="AddError" Text="" Margin="90 -50 0 30"
                                           TextAlignment="Right" Foreground="Red"/>

                            </StackPanel>

                            <StackPanel Name="CPUParticularInfo" Margin="20 0 0 170" Grid.Column="1"
                                        Grid.Row="0" Visibility="Collapsed">

                                <TextBlock Text="Specific information*" Margin="0" FontSize="15"/>

                                <ComboBox Name="CPUSeries" FontSize="15"
                                materialDesign:HintAssist.Hint="CPU series"  Margin="0 20 0 0"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>

                                <StackPanel Orientation="Horizontal" Margin="0 15 0 0">
                                    <TextBox Name="CoreCountTextBox"
                                  TextChanged="CheckKeyNum" FontSize="15"
                                  materialDesign:HintAssist.Hint="Cores" Margin="0 0 0 0"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  MaxLength="3" MaxWidth="215" 
                                        MinWidth="90"/>

                                    <ComboBox Name="CPUBrand" FontSize="15"
                                materialDesign:HintAssist.Hint="Brand"
                                Margin="20 0 0 0" MinWidth="100"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                                </StackPanel>

                            </StackPanel>

                            <StackPanel Name="GPUParticularInfo" Margin="20 0 0 170" Grid.Column="1"
                                        Grid.Row="0" Visibility="Collapsed">

                                <TextBlock Text="Specific information*" Margin="0" FontSize="15"/>

                                <ComboBox Name="GPUMemoryType" FontSize="15"
                                materialDesign:HintAssist.Hint="Memory type"
                                Margin="0 20 0 0"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>

                                <StackPanel Orientation="Horizontal" Margin="0 15 0 0">
                                    <TextBox TextChanged="CheckKeyNum" FontSize="15"
                                  materialDesign:HintAssist.Hint="HDMI ports" Margin="0 0 0 0"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                   Name="GPUHDMICount" MaxLength="2" MaxWidth="215" 
                                        MinWidth="90" />

                                    <ComboBox Name="GPUBrand" FontSize="15"
                                materialDesign:HintAssist.Hint="Brand"
                                Margin="20 0 0 0" MinWidth="100"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                                </StackPanel>

                            </StackPanel>

                            <StackPanel Name="RAMParticularInfo" Margin="20 0 0 170" Grid.Column="1"
                                        Grid.Row="0" Visibility="Collapsed">

                                <TextBlock Text="Specific information*" Margin="0" FontSize="15"/>

                                <StackPanel Orientation="Horizontal" Margin="0 25 0 0">
                                    <ComboBox Name="RAMMemoryType" FontSize="12"
                                materialDesign:HintAssist.Hint="Memory type"
                                Margin="0 0 0 0" MinWidth="90"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>

                                    <ComboBox Name="RAMBrand" FontSize="14"
                                materialDesign:HintAssist.Hint="Brand"
                                Margin="25 -5 0 0" MinWidth="100"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 16 0 0">
                                    <TextBox TextChanged="CheckKeyNum" FontSize="14"
                                  materialDesign:HintAssist.Hint="Modules" Margin="0 0 0 0"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                   Name="RAMModuleCount" MaxLength="3" MaxWidth="215" 
                                        MinWidth="90"/>

                                    <TextBox Name="RAMModuleCopacity" FontSize="15"
                                materialDesign:HintAssist.Hint="Copacity" TextChanged="CheckKeyNum"
                                Margin="25 0 0 0" MinWidth="100" MaxLength="6"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                                </StackPanel>

                            </StackPanel>

                            <StackPanel Name="MotherParticularInfo" Margin="20 0 0 170" Grid.Column="1"
                                        Grid.Row="0" Visibility="Collapsed">

                                <TextBlock Text="Specific information*" Margin="0" FontSize="15"/>

                                <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                                    <ComboBox Name="MotherBasedOn" FontSize="15"
                                materialDesign:HintAssist.Hint="Based on" 
                                Margin="0 0 0 0" MinWidth="90"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>

                                    <ComboBox Name="MotherBrand" FontSize="15"
                                materialDesign:HintAssist.Hint="Brand"
                                Margin="25 0 0 0" MinWidth="100"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 15 0 0">
                                    <TextBox Name="RAMSlots" 
                                  materialDesign:HintAssist.Hint="Ram slots" Margin="0 5 0 0"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  MaxLength="3" MaxWidth="215" 
                                        MinWidth="50" TextChanged="CheckKeyNum"/>

                                    <TextBox Name="PCISlots" FontSize="13" TextChanged="CheckKeyNum"
                                materialDesign:HintAssist.Hint="PCI slots"
                                Margin="20 4 0 0" MinWidth="50" MaxLength="2"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                                    <ComboBox Name="MotherRaid" FontSize="15"
                                materialDesign:HintAssist.Hint="Raid"
                                Margin="25 0 0 0" MinWidth="60"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                                </StackPanel>

                            </StackPanel>

                            <StackPanel Name="Preview" Grid.Column="1" Margin="20 -210 0 0"
                                        Grid.Row="1"/>

                            <materialDesign:PackIcon Kind="FileImagePlus" Height="30" Width="30"
                                Grid.Column="1" Margin="10 -180 195 0"
                                Grid.Row="1" Foreground="#FF2D98FF"/>
                            <Button Name="AddImage" Grid.Column="1" Margin="10 -360 192 0"
                                Padding="-5 -4 -2 -3" Width="23" Opacity="0"
                                Grid.Row="1" Style="{StaticResource MaterialDesignFlatButton}"
                                Click="AddImage_Click" Height="26"/>

                            <materialDesign:PackIcon Kind="FileImagePlus" Height="30" Width="30"
                                Grid.Column="1" Margin="10 -145 195 0"
                                Grid.Row="1" Foreground="#FFF97253"/>
                            <Button Name="RemoveImage" Grid.Column="1" Margin="10 -290 192 0"
                                Padding="-5 -4 -2 -3" Width="23" Opacity="0"
                                Grid.Row="1" Style="{StaticResource MaterialDesignFlatButton}"
                                Click="RemoveImage_Click" Height="26"/>


                        </Grid>
                    </ScrollViewer>
                </materialDesign:Card>
            </Grid>

        </Grid>

        <Grid  Name="CartPage"  Grid.Column="1" Background="AliceBlue"
                   Visibility="Hidden">
            <ScrollViewer Margin="30 20 30 30"
